package Interface;

import java.awt.BorderLayout;
import java.awt.FlowLayout;

import javax.swing.*;
import Pessoas.*;
import Servicos.*;

public class JanelaInicio extends JFrame{

	public JLabel texto;
	public JPanel conteudo;
	public JButton Cliente;
	public JButton Tecnico;
	
	public JanelaInicio ()
	{
		setTitle("Empresa13 Soluções em Serviços");
		
		texto = new JLabel ("Escolha a opção"
				+ " desejada para acessar o Sistema");
		
		add(texto, BorderLayout.PAGE_START);
		setLocation(800, 600);
		conteudo = new JPanel ();
		
		Cliente = new JButton ("Cliente");
		conteudo.add(Cliente);
		
		Tecnico = new JButton ("Tecnico");
		conteudo.add(Tecnico);
		
		add(conteudo, BorderLayout.CENTER);
		
		
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setSize(400, 200);
		setVisible(true);
	}
	
}
